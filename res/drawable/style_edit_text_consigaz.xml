<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <gradient 
                android:angle="270" 
                android:centerX="0.5" 
                android:centerY="0.5" 
                android:startColor="@color/azul_claro_consigaz" 
                android:centerColor="@color/azul_claro_consigaz" 
                android:endColor="@color/azul_claro_consigaz" 
                />

            <stroke android:width="2dp" 
                android:color="@color/grey21" 
                />

            <corners 
                android:radius="7dp" 
                />

            <padding 
                android:left="10dp" 
                android:top="6dp" 
                android:right="10dp" 
                android:bottom="6dp" 
                />
        </shape>
   </item>

</selector>